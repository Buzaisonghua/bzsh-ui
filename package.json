{
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "play",
    "docs"
  ],
  "scripts": {
    "dev": "pnpm -C play dev",
    "prepare": "husky",
    "lint": "eslint . --max-warnings 0 --cache",
    "lint:fix": "pnpm run lint --fix",
    "lint:lint-staged": "lint-staged",
    "cz": "czg",
    "commit": "git pull && git add -A && git-cz && git push",
    "release": "standard-version && git push --follow-tags",
    "docs:dev": "pnpm run -C docs dev",
    "docs:build": "pnpm run -C docs build",
    "docs:serve": "pnpm run -C docs serve",
    "docs:gen-locale": "pnpm run -C docs gen-locale",
    "docs:crowdin-credentials": "pnpm run -C docs crowdin-credentials",
    "clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
    "clean:dist": "rimraf dist",
    "clear": "pnpm run clear:node_modules && pnpm run -r --parallel clear",
    "clear:node_modules": "rimraf node_modules && rimraf pnpm-lock.yaml",
    "build": "pnpm run -C internal/build start",
    "stub": "pnpm run -r --parallel stub",
    "postinstall": "pnpm stub",
    "update:version": "tsx scripts/update-version.ts"
  },
  "dependencies": {
    "@bzsh-ui/components": "workspace:^",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@bzsh-ui/build-constants": "workspace:^",
    "@bzsh-ui/build-utils": "workspace:^",
    "@bzsh-ui/eslint-config": "workspace:^",
    "@bzsh-ui/utils": "workspace:^",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@pnpm/types": "^8.4.0",
    "@types/gulp": "^4.0.17",
    "@types/node": "^22.10.10",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "@vue/tsconfig": "^0.7.0",
    "cz-git": "^1.11.0",
    "czg": "^1.11.0",
    "eslint": "^8.57.1",
    "fast-glob": "^3.3.3",
    "gulp": "^4.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.0",
    "lodash-unified": "^1.0.3",
    "postcss": "^8.5.1",
    "postcss-html": "^1.8.0",
    "postcss-less": "^6.0.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "standard-version": "^9.5.0",
    "sucrase": "^3.35.0",
    "typescript": "^5.7.3",
    "unplugin-vue-macros": "^2.13.10",
    "vite": "^6.0.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
